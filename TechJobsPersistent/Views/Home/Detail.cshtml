@model TechJobsPersistent.ViewModels.JobDetailViewModel

<h1>@Model.Name</h1>

<table class="table">
    <tr>
        <th>Employer</th>
        <td>@Model.EmployerName</td>            @*EmployerName? Is this a gotcha?*@
    </tr>
    <tr>
        <th>Skills</th>
        <td>@Model.SkillText</td>               @*SkillText?*@
